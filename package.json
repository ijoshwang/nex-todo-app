{
  "name": "nex-todo-app",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently -s first \"npm run setup-db\" \"npm run start-server-and-client\"",
    "setup-db": "npm run setup-db --prefix backend",
    "start-server-and-client": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm start --prefix backend",
    "client": "npm start --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  }
}